@model dynamic              
@{
    ViewBag.Title = "New Match";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Match</h2>
<form id="newMatch">
    <div class="form-group">
        <label>League</label>
        <input id="league" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label>Clubs</label>
        <input  id="club" type="text" class="form-control" />
    </div>
    <button class="btn btn-primary">Submit</button>
</form>
@section scripts
    {
     <script>
         $(document).ready(function () {
             var vm = {
                 leagueid=[],
                 clubId =[]
             }
             var league = new Bloodhound({
                 datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                 queryTokenizer: Bloodhound.tokenizers.whitespace,
                 remote: {
                     url: '/api/league?query=%QUERY',
                     wildcard: '%QUERY'
                 }
             });

             $('#league').typeahead({
                 highlight:true
             },
                 {
                 name: 'league',
                 display: 'name',
                 source: league
                 }).on("typeahead:select", function (e, league) {
                     vm.leagueId = league.leagueId
                 });

             var club = new Bloodhound({
                 datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                 queryTokenizer: Bloodhound.tokenizers.whitespace,
                 remote: {
                     url: '/api/club?query=%QUERY',
                     wildcard: '%QUERY'
                 }
             });

             $('#club').typeahead({
                 highlight:true
             }, {
                 name: 'club',
                 display: 'name',
                 source: club
                 }).on("typeahead:select", function (e, club) {
                     vm.clubId = club.clubId
                 });

             $("#newMatch").submit(function (e) {
             e.preventDefault();
             $.ajax({
                 url: "/api/match",
                 method: "post",
                 data: vm
             })
                 .done(function () {
                     console.log("done");
                 })
                 .fail(function () {
                 });
         });
         });
         
     </script>
    }