@model SoccerUpdated.ViewModel.PlayerFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New player</h2>
@using (@Html.BeginForm("Save", "Players"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Players.Name)
        @Html.TextBoxFor(m => m.Players.Name, new { @class="form-control"})
    </div>
   <div class="form-group">
        @Html.LabelFor(m => m.Players.Position)
        @Html.TextBoxFor(m => m.Players.Position, new { @class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Players.ClubId)
        @Html.DropDownListFor(m => m.Players.ClubId,new SelectList(Model.Clubs,"Id","Name"),"Select current club", new { @class="form-control"})
    </div>

   <div class="form-group">
        @Html.LabelFor(m => m.Players.BirthDate)
        @Html.TextBoxFor(m => m.Players.BirthDate, new { @class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Players.Country)
        @Html.TextBoxFor(m => m.Players.Country, new { @class="form-control"})
    </div>
@Html.HiddenFor(m => m.Players.Id);
    <button type="submit" class="btn btn-primary">Save</button>
}
